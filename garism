Sub DeleteFromStartRow_PlanChecker()
    Dim ws As Worksheet
    Dim lastRow As Long
    Dim startRow As Long

    '=== Reference the sheet ===
    Set ws = ThisWorkbook.Sheets("Plan Checker")

    '=== Get start row from cell K15 ===
    startRow = ws.Range("K15").Value

    If startRow <= 1 Then
        MsgBox "⚠️ Invalid Start Row in K15.", vbExclamation
        Exit Sub
    End If

    '=== Find the last row with data in columns A:F ===
    On Error Resume Next
    lastRow = ws.Range("A:F").Find(What:="*", _
                                   After:=ws.Range("A1"), _
                                   LookIn:=xlValues, _
                                   LookAt:=xlPart, _
                                   SearchOrder:=xlByRows, _
                                   SearchDirection:=xlPrevious, _
                                   MatchCase:=False).Row
    On Error GoTo 0

    If lastRow < startRow Then
        MsgBox "✅ Nothing to delete. Start Row (" & startRow & ") is beyond the last data row (" & lastRow & ").", vbInformation
        Exit Sub
    End If

    '=== Delete data from start row downwards, columns A:F ===
    ws.Range("A" & startRow & ":F" & lastRow).ClearContents

    MsgBox "✅ Cleared columns A:F from row " & startRow & " to " & lastRow & ".", vbInformation, "Plan Checker Cleanup"
End Sub
