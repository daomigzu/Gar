Sub ClearExtraData_PlanChecker()
    Dim ws As Worksheet
    Dim lastRow As Long
    Dim deleteFrom As Long

    '=== Reference the target sheet ===
    On Error Resume Next
    Set ws = ThisWorkbook.Sheets("Plan Checker")
    On Error GoTo 0

    If ws Is Nothing Then
        MsgBox "❌ Sheet 'Plan Checker' not found!", vbCritical
        Exit Sub
    End If

    '=== Find the last used row in columns A:F ===
    On Error Resume Next
    lastRow = ws.Range("A:F").Find(What:="*", _
                                   After:=ws.Range("A1"), _
                                   LookIn:=xlValues, _
                                   LookAt:=xlPart, _
                                   SearchOrder:=xlByRows, _
                                   SearchDirection:=xlPrevious, _
                                   MatchCase:=False).Row
    On Error GoTo 0

    If lastRow = 0 Then
        MsgBox "⚠️ No data found in columns A:F.", vbExclamation
        Exit Sub
    End If

    '=== Determine where to start clearing ===
    deleteFrom = lastRow + 1

    '=== Clear only columns A:F below last row ===
    With ws
        .Range("A" & deleteFrom & ":F" & .Rows.Count).ClearContents
    End With

    MsgBox "✅ Cleared all data in columns A:F below row " & lastRow & ".", vbInformation, "Plan Checker Cleanup"
End Sub
