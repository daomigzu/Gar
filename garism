Sub clearData(SheetName As String, colX As Long, colY As Long)
    Dim ws As Worksheet
    Dim lastRow As Long
    
    '=== Safety check if sheet exists ===
    On Error Resume Next
    Set ws = ThisWorkbook.Sheets(SheetName)
    On Error GoTo 0
    If ws Is Nothing Then
        MsgBox "Sheet '" & SheetName & "' not found.", vbExclamation
        Exit Sub
    End If
    
    '=== Validate range ===
    If colX < 1 Or colY < colX Then
        MsgBox "Invalid range. Please check your input rows.", vbExclamation
        Exit Sub
    End If
    
    '=== Clear Columns A:F from row colX to colY ===
    ws.Range("A" & colX & ":F" & colY).ClearContents
    
    MsgBox "Data cleared successfully from A" & colX & " to F" & colY & " in sheet '" & SheetName & "'.", vbInformation
End Sub
