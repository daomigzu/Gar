Sub DeleteFromStartRow_PlanChecker()
    Dim ws As Worksheet
    Dim lastRow As Long
    Dim startRow As Long
    Dim rngToClear As Range
    
    '=== Get the sheet ===
    On Error Resume Next
    Set ws = ThisWorkbook.Sheets("Plan Checker")
    On Error GoTo 0
    
    If ws Is Nothing Then
        MsgBox "❌ Sheet 'Plan Checker' not found.", vbCritical
        Exit Sub
    End If
    
    '=== Get start row from K15 ===
    If IsNumeric(ws.Range("K15").Value) Then
        startRow = CLng(ws.Range("K15").Value)
    Else
        MsgBox "⚠️ K15 doesn't contain a valid row number.", vbExclamation
        Exit Sub
    End If
    
    If startRow < 2 Then
        MsgBox "⚠️ Start row (" & startRow & ") is not allowed. Change K15.", vbExclamation
        Exit Sub
    End If
    
    '=== Find last used row in A:F ===
    On Error Resume Next
    lastRow = ws.Range("A:F").Find(What:="*", _
                                   After:=ws.Range("A1"), _
                                   LookIn:=xlValues, _
                                   LookAt:=xlPart, _
                                   SearchOrder:=xlByRows, _
                                   SearchDirection:=xlPrevious, _
                                   MatchCase:=False).Row
    On Error GoTo 0
    
    If lastRow = 0 Then
        MsgBox "⚠️ No data found in columns A:F.", vbExclamation
        Exit Sub
    End If
    
    If startRow > lastRow Then
        MsgBox "✅ Nothing to clear. Start Row (" & startRow & _
               ") is below last data row (" & lastRow & ").", vbInformation
        Exit Sub
    End If
    
    '=== Safe range build, then clear ===
    Set rngToClear = ws.Range("A" & startRow & ":F" & lastRow)
    rngToClear.ClearContents
    
    MsgBox "✅ Cleared columns A:F from row " & startRow & _
           " to row " & lastRow & ".", vbInformation, "Plan Checker Cleanup"
End Sub
